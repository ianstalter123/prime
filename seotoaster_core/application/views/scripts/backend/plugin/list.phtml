<?php if(!empty($this->plugins)): ?>
	<?php foreach($this->plugins as $plugin): ?>
		<div class="plugin-item">
			<a href="javascript:;" class="readme-plugin" data-name="<?php echo $plugin->getName(); ?>" id="<?php echo $plugin->getName(); ?>"><img src="<?php echo $this->websiteUrl; ?>system/images/readme.png" alt="readme"/></a>
